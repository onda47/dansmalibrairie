						<input type="text" id="username" name="username" required="required" class="form-control"/>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-1 col-md-1">
						<a
							class="btn btn-info" 
							href="{{ path('fos_user_security_login') }}">
