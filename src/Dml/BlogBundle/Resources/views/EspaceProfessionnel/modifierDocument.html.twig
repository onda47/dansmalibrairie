{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Espace professionnel{% endblock %}

{% block body %}
    <h1 class="slapstick">Modifier document</h1>
    {{ form_errors(form) }}
    <form method="post" action="{{ path('dmlblog_modifier_document', {'document': document.id}) }}" {{ form_enctype(form) }} class="form-horizontal" role="form">
        <fieldset>
            <legend>Modification d'un document</legend>
            <div class="form-group">
                {{ form_label(form.nom) }}
                <div class="col-md-7">
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                <div class="col-md-7">
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.fichier) }}
                <div class="col-md-7">
                    {{ form_widget(form.fichier) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <a class="btn btn-info" href="{{ path('dmlblog_administration', {'categorie': 'espace_professionnel'}) }}"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
                    <button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock %}
