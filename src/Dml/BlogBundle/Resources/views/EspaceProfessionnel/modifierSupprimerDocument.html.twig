{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Espace professionnel{% endblock %}

{% block body %}
	<h1 class="slapstick">Liste des documents</h1>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<td>NÂ°</td>
						<td>Description</td>
						<td>Nom du fichier</td>
						<td>Modifier</td>
						<td>Supprimer</td>
					</tr>
				</thead>
				<tbody>
					{% for document in liste_document %}
						<tr>
							<td>{{ loop.index }}</td>
							<td>{{ document.description }}</td>
							<td>{{ document.slug ~ '.' ~ document.extension }}</td>
							<td class="text-center"><a href="{{ path('dmlblog_modifier_document', { 'document': document.id }) }}" title='Modifier "{{ document.slug ~ '.' ~ document.extension }}"'><span class="glyphicon glyphicon-wrench"></span></a></td>
							<td class="text-center"><a href="{{ path('dmlblog_supprimer_document', { 'document': document.id }) }}" title='Supprimer "{{ document.slug ~ '.' ~ document.extension }}"'><span class="glyphicon glyphicon-trash"></span></a></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<a
				href="{{ path('dmlblog_administration', {'categorie': 'espace_professionnel'}) }}"
				title="Retour"
				class="pull-right btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Retour
			</a>
		</div>
	</div>
{% endblock %}
