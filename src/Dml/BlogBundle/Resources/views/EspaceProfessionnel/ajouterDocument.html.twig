{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Espace professionnel{% endblock %}

{% block body %}
	{{ form_errors(form) }}
	<form action="{{ path('dmlblog_ajouter_document') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
		<fieldset>
			<legend>Ajout d'un document</legend>
			<div class="form-group">
				{{ form_label(form.nom) }}
				<div class="col-md-3">
					{{ form_widget(form.nom) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.description) }}
				<div class="col-md-10">
					{{ form_widget(form.description) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.fichier) }}
				<div class="col-md-10">
					{{ form_widget(form.fichier) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10 ">
					<a href="{{ path('dmlblog_administration', {'categorie': 'espace_professionnel'}) }}" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
					<button class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
				</div>
			</div>
		</fieldset>
		{{ form_rest(form) }}
	</form>
{% endblock %}
