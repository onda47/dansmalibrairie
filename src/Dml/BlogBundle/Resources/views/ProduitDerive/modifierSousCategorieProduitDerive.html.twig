{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Produit dérivés{% endblock %}

{% block body %}
    <div class="row">
    	<div class="col-md-12">
	    	<form class="form-horizontal" action="{{ path('dmlblog_modifier_sous_categorie_produit', {sousCategorieProduit : sous_categorie.id}) }}" method="post" {{ form_enctype(form) }}>
	    	    {{ form_errors(form) }}
	    	    <fieldset>
		    	    <legend>Modification d'une sous catégorie de produit</legend>
		    	    <div class="form-group">
		    	    	{{ form_label(form.nom) }}
		    	    	<div class="col-md-4">
		    	    		{{ form_widget(form.nom) }}
		    	    	</div>
		    	    </div>
		    	    <div class="form-group">
		    	    	{{ form_label(form.categorieProduit) }}
		    	    	<div class="col-md-4">
		    	    		{{ form_widget(form.categorieProduit) }}
		    	    	</div>
		    	    </div>
		    	    <div class="form-group">
		    	    	<div class="col-md-offset-2 col-md-10">
		    	    		<a href="{{ path('dmlblog_administration', {'categorie': 'produits_derives'}) }}" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
		    	    		<button class="btn btn-primary" type="submit"/>Valider <span class="glyphicon glyphicon-ok"></span></button>
		    	    	</div>
		    	    </div>
		    	    {{ form_rest(form) }}
	    	    </fieldset>
	    	</form>
	    </div>
    </div>
{% endblock %}
