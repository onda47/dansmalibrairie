{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Produits dérivés{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-8">
		<p class="alert alert-warning">Etes-vous bien certain de vouloir supprimer la sous catégorie de produit "{{ sous_categorie.nom }}" ({{ sous_categorie.categorieProduit }})<br />
		<span class="glyphicon glyphicon-warning-sign"></span> Ceci supprimera également tout les produits associés.</p>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<form method="post" action="{{ path('dmlblog_supprimer_sous_categorie_produit', {'sousCategorieProduit': sous_categorie.id}) }}">
			<a href="{{ path('dmlblog_administration', {'categorie': 'produits_derives'}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
			<button type="submit" class="btn btn-danger">Supprimer <span class="glyphicon glyphicon-trash"></span></button>
			{{ form_rest(form) }}
		</form>
	</div>
</div>
{% endblock %}
