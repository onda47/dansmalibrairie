{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Produit dérivés{% endblock %}

{% block body %}
	<form action="{{ path('dmlblog_modifier_produit', {'produit' : produit.id}) }}" method="POST" {{ form_enctype(form) }} class="form-horizontal" role="form">
		<fieldset>
			<legend>Modification d'un produit</legend>
			<div class="form-group">
				{{ form_label(form.prix) }}
				<div class="col-md-3">
					<div class="input-group">
						{{ form_widget(form.prix) }}
						<span class="input-group-addon">€</span>
					</div>
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.messageFlash) }}
				<div class="col-md-3">
					{{ form_widget(form.messageFlash) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.statut) }}
				<div class="col-md-3">
					{{ form_widget(form.statut) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.sousCategorieProduit) }}
				<div class="col-md-3">
					{{ form_widget(form.sousCategorieProduit) }}
				</div>
			</div>
		</fieldset>
	    <div class="col-md-offset-2">
	    	<a href="{{ path('dmlblog_modifier_image', {'image': produit.image.id}) }}" class="btn btn-info">
	    		Modifier l'image
	    	</a>
	    </div>
	    <br />
		{{ form_rest(form) }}
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<a class="btn btn-info" href="{{ path('dmlblog_administration', {'categorie': 'produits_derives'}) }}"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
				<button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
			</div>
		</div>
	</form>
{% endblock %}
