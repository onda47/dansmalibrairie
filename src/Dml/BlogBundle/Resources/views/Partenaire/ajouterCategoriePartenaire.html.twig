{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Partenaire{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			{{ form_errors(form) }}
			<form method="post" action="{{ path('dmlblog_ajouter_categorie_partenaire') }}" {{ form_enctype(form) }} class="form-horizontal" role="form">
				<fieldset>
					<legend>Enregistrement d'une cat√©gorie de partenaire</legend>
					<div class="form-group">
						{{ form_label(form.nom) }}
						<div class="col-md-4">
							{{ form_widget(form.nom) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.priorite) }}
						<div class="col-md-4">
							{{ form_widget(form.priorite) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-offset-1 col-md-11">
							<a href="{{ path('dmlblog_administration', {'categorie': 'partenaire'}) }}" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
							<button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
						</div>
					</div>
				</fieldset>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
{% endblock %}
