{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Partenaire{% endblock %}

{% block body %}
	<h1 class="slapstick">Modifier une catégorie de partenaire</h1>
	{{ form_errors(form) }}
	<form method="post" action="{{ path('dmlblog_modifier_categorie_partenaire', {'categoriePartenaire': categoriePartenaire.id}) }}" {{ form_enctype(form) }} class="form-horizontal" role="form">
		<fieldset>
			<legend>Modification d'une catégorie de partenaire</legend>
			<div class="form-group">
				{{ form_label(form.nom) }}
				<div class="col-md-4">
					{{ form_widget(form.nom) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.priorite) }}
				<div class="col-md-4">
					{{ form_widget(form.priorite) }}
				</div>
			</div>
			{{ form_rest(form) }}
			<div class="form-group">
				<div class="col-md-offset-1 col-md-11">
					<a class="btn btn-info" href="{{ path('dmlblog_administration', {'categorie': 'partenaire'}) }}" title="Retour"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
					<button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
				</div>
			</div>
		</fieldset>
	</form>
{% endblock %}
