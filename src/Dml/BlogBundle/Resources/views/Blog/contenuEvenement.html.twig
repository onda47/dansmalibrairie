<article>
    <h2>
        <a href="{{ path('dmlblog_evenement_unique', {'categorie': categorie, 'slug': evenement.slug}) }}">
            {{ evenement.titre|upper }}
        </a>
        {% include '::like.html.twig' with { 'url': url('dmlblog_evenement_unique', {'categorie': categorie, 'slug': evenement.slug}) } %}
    </h2>
    <div>
        <div class="col-md-4">
            <a href="{{ path('dmlblog_evenement_unique', {'categorie': categorie, 'slug': evenement.slug}) }}">
                <img src="{{ asset('') ~ evenement.image.webChemin }}" alt="{{ evenement.image.alt }}" title="{{ evenement.image.alt }}">
            </a>
        </div>

        <div class="media-body">
            <h3>
                Du {{ evenement.dateDebut|localizeddate('short', 'none') }} à {{ evenement.dateDebut|localizeddate('none', 'short') }} au {{ evenement.dateFin|localizeddate('short', 'none') }} à {{ evenement.dateFin|localizeddate('none', 'short') }}
            </h3>
            <p>{{ evenement.description|bbcode_filter('my_default_filter') }}</p>
            <p class="text-right">
                Cette article a été publié le {{ evenement.datePublication|date('d/m/Y') }} par {{ evenement.auteur }}
                {% include '::share.html.twig' with {'url': url('dmlblog_evenement_unique', {'categorie': categorie, 'slug': evenement.slug})} %}
            </p>
        </div>
    </div>
    {% if is_granted("ROLE_ADMIN") %}
        <div class="row">
            <div class="col-md-offset-2 col-md-1">
                <a href="{{ path('dmlblog_modifier_evenement', {'categorie' : categorie, 'evenement' : evenement.id}) }}">modifier</a>
            </div>
            <div class="col-md-9">
                <a href="{{ path('dmlblog_supprimer_evenement', {'categorie' : categorie, 'evenement' : evenement.id}) }}">supprimer</a>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            {% include '::comment.html.twig' with {'url': url('dmlblog_evenement_unique', {'categorie': categorie, 'slug': evenement.slug})} %}
        </div>
    </div>
</article>
