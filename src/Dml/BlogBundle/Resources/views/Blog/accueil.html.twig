            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                {% for var in n_bd %}
                    <div class="item{% if loop.first %} active{% endif %}">
                        <img
                            src="{{ asset(var.image.webChemin) }}"
                            alt="{{ var.image.alt }}"
                            width="140"
                        >
                        <div class="carousel-caption">
                            <h3>
                                <a href="{{ path('dmlblog_livre', {'fonction': 'nouveaute', 'categorie': 'jeunesse'}) }}" title="{{ var.titre }}">
                                    {{ var.titre|truncate(28, false, '...') }}
                                </a>
