{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - {{categorie}}{% endblock %}

{% block body %}
	<h1 class="slapstick">Liste des évènements</h1>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Date</th>
							<th>Nom</th>
							<th class="text-center">Modifier</th>
							<th class="text-center">Supprimer</th>
						</tr>
					</thead>
					<tbody>
						{% for evenement in liste_evenement %}
						    <tr>
						    	<td>{{ evenement.dateDebut|date('d/m/Y') }}</td>
						    	<td>{{ evenement.titre }}</td>
						    	<td class="text-center"><a href="{{ path('dmlblog_modifier_evenement', { 'evenement': evenement.id, 'categorie': categorie }) }}" title='Modifier "{{ evenement.titre }}"'><span class="glyphicon glyphicon-wrench"></span></a></td>
								<td class="text-center"><a href="{{ path('dmlblog_supprimer_evenement', { 'evenement': evenement.id, 'categorie': categorie }) }}" title='Supprimer "{{ evenement.titre }}"'><span class="glyphicon glyphicon-trash"></span></a></td>
						    </tr>
						{% endfor %}
					</tbody>
			</table>
			<a
				href="{{ path('dmlblog_administration', {'categorie': categorie}) }}"
				title="Retour"
				class="pull-right btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Retour
			</a>
		</div>
	</div>

{% endblock %}
