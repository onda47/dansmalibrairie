{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Gallerie{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-8">
		<p class="alert alert-warning">
			<span class="glyphicon glyphicon-warning-sign"></span> Etes-vous bien certain de vouloir supprimer l'image "{{ gallerie.image.alt }}"<br />
		</p>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<form method="post" action="{{ path('dmlblog_supprimer_gallerie', {'gallerie': gallerie.id }) }}">
			<a href="{{ path('dmlblog_gallerie', {'page': 1}) }}" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
			<button type="submit" class="btn btn-danger">Supprimer <span class="glyphicon glyphicon-trash"></span></button>
			{{ form_rest(form) }}
		</form>
	</div>
</div>
{% endblock %}
