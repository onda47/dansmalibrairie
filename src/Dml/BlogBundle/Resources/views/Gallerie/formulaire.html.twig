{{ form_errors(form) }}
<form action="{{ route }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
    <fieldset>
        <legend>{{ message }}</legend>

        <div class="form-group">
            {{ form_label(form.dateAjout) }}
            <div class="col-md-5">
                {{ form_widget(form.dateAjout) }}
            </div>
        </div>
    </fieldset>
    {% if modifier %}
        <div class="col-md-offset-2">
            <a
                class="btn btn-info"
                href="{{ path('dmlblog_modifier_image', {'image': gallerie.image.id}) }}">
                Modifier l'image
            </a>
        </div>
        <br />
    {% else %}
    <fieldset>
        <legend>L'image</legend>
        <div class="form-group">
            {{ form_label(form.image.alt) }}
            <div class="col-md-3">
                {{ form_widget(form.image.alt) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.image.file) }}
            <div class="col-md-10">
                {{ form_widget(form.image.file) }}
            </div>
        </div>
    </fieldset>
    {% endif %}
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a
                class="btn btn-info"
                href="{{ path('dmlblog_gallerie', {'page': 1}) }}">
                    <span class="glyphicon glyphicon-arrow-left"></span> Retour
            </a>

            <button type="submit" class="btn btn-primary">Valider <span class="glyphicon glyphicon-ok"></span></button>
        </div>
    </div>
</form>
