{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block title %}{{ parent() }} - Liste des newsletter{% endblock %}

{% block titre_admin %} - Newsletter{% endblock %}

{% block body %}
    <h1 class="slapstick">Liste des newsletter</h1>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Date de publication</th>
							<th class="text-center">Modifier</th>
							<th class="text-center">Supprimer</th>
						</tr>
					</thead>
					<tbody>
						{% for newsletter in newsletters %}
						    <tr>
						    	<td>{{ newsletter.datePublication|date('d/m/Y') }}</td>
						    	<td class="text-center"><a href="{{ path('dmlblog_modifier_newsletter', { 'newsletter': newsletter.id }) }}" title='Modifier "{{ newsletter.datePublication|date('d/m/Y') }}"'><span class="glyphicon glyphicon-wrench"></span></a></td>
								<td class="text-center"><a href="{{ path('dmlblog_supprimer_newsletter', { 'newsletter': newsletter.id }) }}" title='Supprimer "{{ newsletter.datePublication|date('d/m/Y') }}"'><span class="glyphicon glyphicon-trash"></span></a></td>
						    </tr>
						{% endfor %}
					</tbody>
			</table>
			<a
				href="{{ path('dmlblog_administration', {'categorie': 'newsletter'}) }}"
				title="Retour"
				class="pull-right btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Retour
			</a>
		</div>
	</div>
{% endblock %}
