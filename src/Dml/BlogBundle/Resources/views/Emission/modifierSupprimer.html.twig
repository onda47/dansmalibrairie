{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - Radio bulle{% endblock %}

{% block body %}
	<h1 class="slapstick">Liste des Ã©mission</h1>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Date</th>
							<th>Nom</th>
							<th class="text-center">Modifier</th>
							<th class="text-center">Supprimer</th>
						</tr>
					</thead>
					<tbody>
						{% for emission in liste_emission %}
						    <tr>
						    	<td>{{ emission.dateEmission|date('d/m/Y') }}</td>
						    	<td>{{ emission.titre }}</td>
						    	<td class="text-center">
						    		<a
							    		href="{{ path('dmlblog_modifier_emission', { 'emission': emission.id }) }}"
							    		title='Modifier "{{ emission.titre }}"'><span class="glyphicon glyphicon-wrench"></span>
						    		</a>
						    	</td>
								<td class="text-center">
									<a
										href="{{ path('dmlblog_supprimer_emission', { 'emission': emission.id }) }}"
										title='Supprimer "{{ emission.titre }}"'><span class="glyphicon glyphicon-trash"></span>
									</a>
								</td>
						    </tr>
						{% endfor %}
					</tbody>
			</table>
			<a
				href="{{ path('dmlblog_administration', {'categorie': 'radio_bulle'}) }}"
				class="pull-right btn btn-default">
				<span class="glyphicon glyphicon-arrow-left"></span> Retour
			</a>
		</div>
	</div>
{% endblock %}
