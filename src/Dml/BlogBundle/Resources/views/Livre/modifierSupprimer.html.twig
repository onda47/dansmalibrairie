{% extends 'DmlBlogBundle::layout_admin.html.twig' %}

{% block titre_admin %} - {{ categorie }}{% endblock %}

{% block body %}
    <h1 class="slapstick">Liste des livres</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Edition</th>
                            <th class="text-center">Modifier</th>
                            <th class="text-center">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for livre in livres %}
                            <tr>
                                <td>{{ livre.titre }}</td>
                                <td>{{ livre.edition }}</td>
                                <td class="text-center"><a href="{{ path('dmlblog_modifier_livre', { 'livre': livre.id, 'categorie': categorie, 'fonction': fonction }) }}" title='Modifier "{{ livre.titre }}"'><span class="glyphicon glyphicon-wrench"></span></a></td>
                                <td class="text-center"><a href="{{ path('dmlblog_supprimer_livre', { 'livre': livre.id, 'categorie': categorie, 'fonction': fonction }) }}" title='Supprimer "{{ livre.titre }}"'><span class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
            </table>
            <a
                href="{{ path('dmlblog_administration', {'categorie': categorie}) }}"
                title="Retour"
                class="pull-right btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Retour
            </a>
        </div>
    </div>
{% endblock %}
